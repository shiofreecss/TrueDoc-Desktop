<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <DrawingBrush x:Key="AppIconDrawing">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <!-- Document Icon -->
                <GeometryDrawing Brush="#4285F4">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <!-- Main Document -->
                            <RectangleGeometry Rect="10,4,44,56" RadiusX="3" RadiusY="3" />
                            <!-- Folded Corner -->
                            <PathGeometry Figures="M 44,4 L 54,14 L 44,14 Z" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
                <!-- Document Lines -->
                <GeometryDrawing Brush="White">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="18,22,28,2" />
                            <RectangleGeometry Rect="18,30,28,2" />
                            <RectangleGeometry Rect="18,38,28,2" />
                            <RectangleGeometry Rect="18,46,20,2" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <!-- Icon Canvas for use as a resource -->
    <Canvas x:Key="AppIconCanvas" Width="64" Height="64">
        <Rectangle Width="64" Height="64" Fill="{StaticResource AppIconDrawing}" />
    </Canvas>
    
</ResourceDictionary> 