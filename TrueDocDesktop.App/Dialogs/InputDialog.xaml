<Window x:Class="TrueDocDesktop.App.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="180" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="lblQuestion" Grid.Row="0" Margin="0,5,0,10" Text="Question:" TextWrapping="Wrap"/>
        
        <TextBox x:Name="txtAnswer" Grid.Row="1" Margin="0,0,0,15" Height="25"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" Click="btnCancel_Click"/>
            <Button x:Name="btnOk" Content="OK" Width="80" Height="30" Click="btnOk_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window> 